@model Product

<h1>@Model.Title</h1>

<p>Really tasty, quickly intoxicates</p>

<div class="container py-5">
    <div class="row g-4">

        <!-- LEFT: Product Images -->
        <div class="col-md-6">

            <!-- Main Image -->
            <img id="mainImage" src="@Model.MainImage" class="product-img-large mb-3" alt="Product">

            <!-- Thumbnails -->
            <div class="row g-2">
                @foreach (var img in Model.Images)
                {
                <div class="col-3">
                    <img src="@img" class="thumb-img" onclick="changeImage(this.src)">
                </div>
                }
            </div>
        </div>

        <!-- RIGHT: Product Info -->
        <div class="col-md-6">
            <h2 class="mb-2">@Model.Title</h2>

            <div class="mb-3">
                ⭐⭐⭐⭐⭐ (124 reviews)
            </div>

            <h3 class="text-primary">$@Model.Price</h3>

            <p class="mt-3">
                This stylish leather backpack is perfect for travel, school, or daily use.
            </p>

            <ul>
                <li>100% genuine leather</li>
                <li>Water-resistant material</li>
                <li>Adjustable shoulder straps</li>
                <li>Fits 15-inch laptop</li>
            </ul>

            <div class="mt-4">
                <label class="form-label">Quantity</label>
                <input type="number" class="form-control w-25" value="1" min="1">
            </div>

            <button class="btn btn-primary btn-lg mt-4">
                Add to Cart
            </button>

            <button class="btn btn-outline-secondary btn-lg mt-4">
                Buy Now
            </button>
        </div>
    </div>
</div>

<script>
    function changeImage(src) {
        document.getElementById("mainImage").src = src;
    }
</script>

<style>
    .product-img-large {
        width: 100%;
        border-radius: 10px;
    }

    .thumb-img {
        width: 100%;
        cursor: pointer;
        border-radius: 8px;
        border: 2px solid transparent;
    }

        .thumb-img:hover {
            border: 2px solid #0d6efd;
        }
</style>
