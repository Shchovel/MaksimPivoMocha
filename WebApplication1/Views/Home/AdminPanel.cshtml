@model List<Beer>
<h1>
    Products Admin Panel
</h1>

<a class="btn btn-primary" asp-controller="Home" asp-action="Create">Create product</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">img</th>
            <th scope="col">Category</th>
            <th scope="col">Brand</th>
            <th scope="col">Price</th>
            <th scope="col">Country of origin</th>
            <th scope="col">Package</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <th scope="row">@i.Id</th>
                <td> <img width="100" src="https://images.pexels.com/photos/90946/pexels-photo-90946.jpeg?cs=srgb&dl=pexels-madebymath-90946.jpg&fm=jpg" /> </td>
                <td>@i.Category</td>
                <td>@i.Brand</td>
                <td>@i.Price</td>
                <td>@i.Countryoforigin</td>
                <td>@i.Package</td>
                <td>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@i.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>